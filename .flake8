[flake8]
# ============================================================================
# FLAKE8 CONFIGURATION
# ============================================================================

# Maximum line length
max-line-length = 100

# Maximum complexity
max-complexity = 15

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .tox,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    logs,
    .env

# Ignore specific errors
ignore =
    E203,  # Whitespace before ':' (conflicts with black)
    E266,  # Too many leading '#' for block comment
    E501,  # Line too long (handled by black)
    W503,  # Line break before binary operator (conflicts with black)
    W504,  # Line break after binary operator
    E402,  # Module level import not at top of file
    F401,  # Module imported but unused (can be noisy)
    F841,  # Local variable assigned but never used

# Count errors
count = True

# Show source code
show-source = True

# Statistics
statistics = True

# Per-file ignores
per-file-ignores =
    __init__.py: F401, F403
    tests/*: F401, F403, F811
    src/domain/__init__.py: F401

# Maximum allowed per-file violations
max-doc-length = 100
